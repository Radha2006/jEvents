<h1>Listing facilities</h1>

<table>
  <tr>
    <th>Venue</th>
    <th>Has parking</th>
    <th>Has buffet</th>
    <th>Is alcohol allowed</th>
    <th>Is nonveg allowed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @facilities.each do |facility| %>
  <tr>
    <td><%= facility.venue %></td>
    <td><%= facility.has_parking %></td>
    <td><%= facility.has_buffet %></td>
    <td><%= facility.is_alcohol_allowed %></td>
    <td><%= facility.is_nonveg_allowed %></td>
    <td><%= link_to 'Show', facility %></td>
    <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
    <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

