<div class="hero-unit" id="homeHeading">
	<h2>Spending too much time searching for a venue? Relax, we'll find the right place for any event!</h2>
</div>

<%= form_tag({controller: "search", action: "query"}, method: "get") do %>
<div id="searchArea">
	<div class="pull-right">
		<%= select_tag(:eventtype_id, options_for_select([["I'm planning for...", 0], ['Wedding', 1], ['Birthday Party', 2],['Corporate Meeting', 3]]), {class: "selectpicker"}) %>
		<%= select_tag(:location_id, options_for_select([["In & Around...", 0], ['Guindy', 1], ['Ashok Nagar', 2]]), {class: "selectpicker"}) %>
		<%= submit_tag("Search Venues", {id: "searchButton", class: "btn-info btn-large"}) %>
	</div>
</div>
<% end %>

<div id="listVenueMsg" class="row-fluid">
	<hr />
	<h3>Do you have space for conducting events? <em><a href="#" style="color:#fa8534;">List your venue!</a></em> &gt;&gt; Receive more bookings!!</h3>
	<hr />
</div>
<div id="featuredVenues" class="row-fluid">
	<h4>Featured Venues in Chennai for weddings, birthdays, conferences, meetings & more!!</h4>
	<ul class="span11 bxslider">
		<li>
			<%= link_to image_tag('1.jpg', :title => "Image ONE - 1"), {:controller => "pages", :action => "placeholder", :target => "_blank"} %>
		</li>
