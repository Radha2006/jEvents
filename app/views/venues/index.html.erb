<div class="fr">
	<%= link_to "My Profile", edit_user_registration_path, :class => "btn btn-warning" %>
</div>

<h1>My venues</h1>

<table class="table table-striped">
	<tr>
		<th>Name</th>
		<th>Type</th>
		<th>Website</th>
		<th>Terms conditions</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

	<% @venues.each do |venue| %>
	<tr>
		<td><%= venue.name %></td>
		<td><%= venue.venue_type %></td>
		<td><%= venue.website %></td>
		<td><%= venue.terms_conditions %></td>
		<td><%= link_to 'Show', venue %></td>
		<td><%= link_to 'Edit', edit_venue_path(venue) %></td>
		<td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
	<% end %>
</table>

<br />

