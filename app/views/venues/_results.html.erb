	<span id="query_title" style="font-weight:bold;">
		<%= unless @query.capacity.count == 0 
			'Capacity: '
		end %>
	</span>
	<% @query.capacity.each do |a| %>
		<span class="query_param"><%= a %> </span>
	<% end %>
</div>
