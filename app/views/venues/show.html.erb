<h4><%= @venue.name %>, <%= @venue.venue_type %></h4>
<h6><%= @venue.address.address %>, <%= @venue.address.area %></h6>

<div style="height:300px">
  <div class="span4 venue-img-div">
    <img src="/assets/1.jpg" class='view-venue-img' >
  </div>
  <div class="span7 venue-amenities">
    <p style="font-size:20px">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @venue.description %></p>

    <div class="span3 amenities-div">
      <p><span><img src="/assets/capacity.jpg"></span>25-1000</p>
      <p><span><img src="/assets/parking.png"></span>Valet Parking</p>
      <p><span><img src="/assets/restaurant.png"></span>External catering allowed</p>
      <p><span><img src="/assets/alcohol.png"></span>Alcohol allowed</p>
    </div>

    <div class="span3 amenities-div">
      <p><span><img src="/assets/credcard.png"></span>Credit cards accepted</p>
      <p><span><img src="/assets/rupee.jpg" ></span>25,000 to 3 Lakhs</p>
      <p><span><img src="/assets/veg.gif"></span>Cost/Plate: Rs 450</p>
      <p><span><img src="/assets/nv.png" ></span>Cost/Plate: Rs 550</p>
    </div>
  </div>

</div>

<div class="view-suit">
  <p>Suitable for Weddings, Birthdays, Association meetings and Conferences</p>
</div>
</br>

<table class="table table-bordered">
  <tr>
    <td>Hall name</td>
    <td>Theatre</td>
    <td>U-Shape</td>
    <td>Double-U</td>
    <td>Classroom</td>
    <td>Board</td>
    <td>Roundtable</td>
  </tr>
  <% @venue.halls.each do |h| %>
    <% unless h.seating_arrangement.nil? %>
      <tr>
        <td><%= h.name %></td>
        <td>
          <%= if h.seating_arrangement.capacity_theatre.nil? 
            '-'
          else
            h.seating_arrangement.capacity_theatre
          end %>
        </td>
        <td>
          <%= if h.seating_arrangement.capacity_ushape.nil? 
            '-'
          else
            h.seating_arrangement.capacity_ushape
          end %>
        </td>
        <td>
          <%= if h.seating_arrangement.capacity_doubleu.nil? 
            '-'
          else
            h.seating_arrangement.capacity_doubleu
          end %>
        </td>
        <td>
          <%= if h.seating_arrangement.capacity_classroom.nil? 
            '-'
          else
            h.seating_arrangement.capacity_classroom
          end %>
        </td>
        <td>
          <%= if h.seating_arrangement.capacity_board.nil? 
            '-'
          else
            h.seating_arrangement.capacity_board
          end %>
        </td>
        <td>
          <%= if h.seating_arrangement.capacity_roundtable.nil? 
            '-'
          else
            h.seating_arrangement.capacity_roundtable
          end %>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>


