<h2>Users</h2>
<%= link_to "New", new_admin_user_path, :class => 'btn btn-success fr' %>
<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
			<th>UserId</th>
			<th>Email</th>
			<th>Name</th>
			<th>Roles</th>
			<th>Created at</th>
			<th>Locked?</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| -%>
		<tr>
			<td><%= user.id %></td>
			<td><%= link_to user.email, admin_user_path(user) %></td>
			<td><%= user.name %></td>
			<td><%= user.roles.pluck(:name) %></td>
			<td><%= user.created_at %></td>
			<td><%= if user.locked_at.nil? then 'No' else 'Yes' end %></td>
			<td>
				<%= link_to raw('<i class="icon-eye-open"></i>'), admin_user_path(user) %>&nbsp;|
				<%= link_to raw('<i class="icon-pencil"></i>'), edit_admin_user_path(user) %>&nbsp;|
				<%= link_to raw('<i class="icon-trash"></i>'), admin_user_path(user), :method => :delete, :confirm => "Are you sure?" %>
			</td>
		</tr>
		<% end -%>
	</tbody>
</table>