<% content_for :title, "Venue Add Requests" %>
<h3>Venue Add Requests</h3>
<table class="table table-striped table-bordered table-condensed">
	<tr>
		<th>Name</th>
		<th>Area</th>
		<th>Contact Person</th>
		<th>Email</th>
		<th>Mobile</th>
		<th>Landline</th>
		<th>User</th>
		<th></th>
	</tr>
	<% @requests.each do |request| %>
	<tr>
		<td><%= request.name %></td>
		<td><%= request.area %></td>
		<td><%= request.contact_name.presence || '-' %></td>
		<td><%= request.email %></td>
		<td><%= request.contact_mobile %></td>
		<td><%= request.contact_landline.presence || '-' %></td>
		<td><%= if request.user.nil? then "Not a user" else request.user.email end %></td>
		<td><%= link_to raw('<i class="icon-trash"></i>'), admin_venue_request_path(request), method: :delete, data: { confirm: 'Are you sure you want to delete this venue request?' }, :title => "Delete Request" %></td>
	</tr>
	<% end %>
</table>
<div class="flickr_pagination">
	<%= paginate @requests, :container => false %>
</div>